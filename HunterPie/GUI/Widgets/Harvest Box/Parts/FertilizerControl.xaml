<UserControl x:Class="HunterPie.GUI.Widgets.Harvest_Box.Parts.FertilizerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HunterPie.GUI.Widgets.Harvest_Box.Parts"
             mc:Ignorable="d" 
             d:DesignHeight="29">
    <DockPanel Width="230">
        <Image x:Name="FertilizerIcon" DockPanel.Dock="Left" Visibility="Collapsed" Height="29"/>
        <TextBlock x:Name="FertilizerName" DockPanel.Dock="Left" Text="Fertilizer Name" FontSize="16" Foreground="#FFEEEEEE" FontFamily="Roboto" Margin="0" Padding="0,5,0,0"/>
        <TextBlock x:Name="FertilizerAmount" DockPanel.Dock="Right" Text="x0" FontSize="16" Width="30" HorizontalAlignment="Right" Foreground="#FFE2E2E2" FontFamily="Roboto" FontWeight="Light" Padding="0,5,0,0"/>
    </DockPanel>
</UserControl>
