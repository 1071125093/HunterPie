<UserControl x:Class="HunterPie.GUI.Widgets.DPSMeter.Meter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HunterPie.GUI.Widgets.DPSMeter"
             xmlns:Parts="clr-namespace:HunterPie.GUI.Widgets.DPSMeter.Parts"
             mc:Ignorable="d" Height="320.018" Width="320.006">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary> 
    </UserControl.Resources>
    <StackPanel>
        <StackPanel Orientation="Horizontal" Background="#7F000000">
            <Image Source="{StaticResource ICON_STOPWATCH}" Width="20" Height="20" Margin="5,0,0,0"/>
            <Label Content="00:01:52" Foreground="#FFEAEAEA" FontFamily="Roboto" FontWeight="Bold" FontSize="16" />
        </StackPanel>
        <StackPanel x:Name="Party">
            <Parts:PartyMember Player="I'm gey" Color="#f54242" DPSPercentage="54" DPS="69/s (54%)" Class="{StaticResource ICON_GREATSWORD}"/>
            <Parts:PartyMember Player="Geystro is gey" Color="#f5ad42" DPSPercentage="24" DPS="28/s (24%)" Class="{StaticResource ICON_LONGSWORD}"/>
            <Parts:PartyMember Player="Lyss" Color="#42f584" DPSPercentage="16" DPS="999/s (16%)" Class="{StaticResource ICON_SWORDANDSHIELD}"/>
            <Parts:PartyMember Player="Haato" Color="#42b9f5" DPSPercentage="10" DPS="6.9/s (10%)"/>
        </StackPanel>
    </StackPanel>
</UserControl>
