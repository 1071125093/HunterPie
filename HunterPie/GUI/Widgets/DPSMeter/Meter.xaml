<UserControl x:Class="HunterPie.GUI.Widgets.DPSMeter.Meter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HunterPie.GUI.Widgets.DPSMeter"
             xmlns:Parts="clr-namespace:HunterPie.GUI.Widgets.DPSMeter.Parts"
             mc:Ignorable="d" Height="320.018" Width="320.006">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary> 
    </UserControl.Resources>
    <StackPanel>
        <StackPanel Orientation="Horizontal" Background="#7F000000">
            <Image Source="{StaticResource ICON_STOPWATCH}" Width="20" Height="20" Margin="5,0,0,0"/>
            <Label Content="00:01:52" Foreground="#FFEAEAEA" FontFamily="Roboto" FontWeight="Bold" FontSize="16" />
        </StackPanel>
        <StackPanel x:Name="Party">
            <Parts:PartyMember Color="#f54242"/>
            <Parts:PartyMember Color="#f5ad42"/>
            <Parts:PartyMember Color="#42f584"/>
            <Parts:PartyMember Color="#42b9f5"/>
        </StackPanel>
    </StackPanel>
</UserControl>
