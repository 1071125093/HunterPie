<UserControl x:Class="HunterPie.GUI.Widgets.DPSMeter.Meter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HunterPie.GUI.Widgets.DPSMeter"
             xmlns:Parts="clr-namespace:HunterPie.GUI.Widgets.DPSMeter.Parts"
             mc:Ignorable="d" BorderBrush="Black" BorderThickness="1">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary> 
    </UserControl.Resources>
    <StackPanel>
        <StackPanel Orientation="Horizontal" Background="#7F000000">
            <Image Source="{StaticResource ICON_STOPWATCH}" Width="20" Height="20" Margin="5,0,0,0"/>
            <Label x:Name="Timer" Content="" Foreground="#FFEAEAEA" FontFamily="Roboto" FontWeight="Bold" FontSize="16" />
        </StackPanel>
        <StackPanel x:Name="Party" Background="#7F000000">
            <Parts:PartyMember Color="#DC143C"/>
            <Parts:PartyMember Color="#FF8C00"/>
            <Parts:PartyMember Color="#6A5ACD"/>
            <Parts:PartyMember Color="#00FF7F"/>
        </StackPanel>
    </StackPanel>
</UserControl>
