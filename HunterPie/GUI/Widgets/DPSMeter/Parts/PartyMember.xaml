<UserControl x:Class="HunterPie.GUI.Widgets.DPSMeter.Parts.PartyMember"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HunterPie.GUI.Widgets.DPSMeter.Parts"
             xmlns:converters="clr-namespace:HunterPie.GUI.Helpers"
             mc:Ignorable="d" 
             x:Name="PlayerContainer" d:DesignWidth="320" Height="45" Foreground="{x:Null}">
    <UserControl.Resources>
        <ResourceDictionary>
            <converters:DPSBarWidthConverter x:Key="DPSBarWidthConverter"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel ClipToBounds="True" >
        <StackPanel.Background>
            <LinearGradientBrush EndPoint="1,0" StartPoint="0,1">
                <GradientStop Color="#4C111111" Offset="0"/>
                <GradientStop Color="#4C404040" Offset="1"/>
            </LinearGradientBrush>
        </StackPanel.Background>
        <StackPanel Height="45" Orientation="Horizontal">
            <Image x:Name="PlayerClassIcon" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="3,0,3,15" Opacity="0.8"/>
            <TextBlock x:Name="PlayerName" Foreground="{Binding Path=DataContext.Color}" TextWrapping="Wrap" Text="Player" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" Margin="0,2" FontFamily="Roboto" MinWidth="200" MaxWidth="211" Height="41" MaxHeight="41" TextAlignment="Left" Padding="4,9,0,0" Width="199" TextTrimming="CharacterEllipsis"/>
            <Viewbox MaxWidth="94" Width="94">
                <TextBlock x:Name="DPSText" Text="0 (0%)" Foreground="#FFEAEAEA" FontWeight="Normal" FontFamily="Roboto" FontSize="18" Margin="0,12,0,11" Padding="0,0,5,0"/>
            </Viewbox>
        </StackPanel>
        <Rectangle x:Name="PlayerDPSBar" Height="2" Fill="{Binding Path=DataContext.Color}" MaxWidth="320" HorizontalAlignment="Left" Margin="0,-7,0,0" />
    </StackPanel>
</UserControl>
